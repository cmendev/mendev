---
import "@fontsource-variable/onest";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import SpeedInsights from "@vercel/speed-insights/astro";

interface Props {
  title?: string;
  description?: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="bg-white dark:bg-neutral-950 transition-colors duration-1000">
    <div
      class="absolute top-0 z-[-2] h-screen w-[100%] bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
    <SpeedInsights />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
    margin: 0;
    padding: 0;
  }
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

 /* Scrollbar para navegadores basados en WebKit (Chrome, Safari, Edge Chromium) */
::-webkit-scrollbar {
  width: 10px; /* Ancho del scrollbar */
}

@supports (scrollbar-gutter: stable) {
  html {
    scrollbar-gutter: stable;
  }
}


::-webkit-scrollbar-track {
  background: transparent; /* Hace que el fondo del track sea transparente */
}

::-webkit-scrollbar-thumb {
  background-color: rgb(251, 146, 60); /* Color de la barra de desplazamiento */
  border-radius: 6px; /* Esquinas redondeadas */
}

::-webkit-scrollbar-thumb:hover {
  background-color: rgba(251, 146, 60, 0.8); /* Color ligeramente m√°s oscuro al pasar el mouse */
}

/* Scrollbar para Firefox */
* {
  scrollbar-width: thin;
  scrollbar-color: rgb(251, 146, 60) transparent;
}

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
