---
import Badge from "./Badge.astro";
import SocialStack from "./SocialStack.astro";

import LinkedInIcon from "./icons/LinkedIn.astro";
import GithubIcon from "./icons/Github.astro";
import GmailIcon from "./icons/Gmail.astro";
---

<div class="rounded-full size-12 mb-4 overflow-hidden">
  <img
    src="/me.webp"
    alt="Icono de Mendev"
    class="w-full h-full object-cover"
  />
</div>
<h1
  class="text-[#1c0b2b] dark:text-white text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold flex flex-wrap gap-x-2 pb-4 lg:pb-8 items-center"
>
  Hola, soy <div class="relative group">
    <span class="color-animated">Mendev</span>
    <div
      class="absolute left-1/2 transform -translate-x-1/2 mt-0 min-w-max p-2 text-sm bg-white dark:bg-neutral-950 text-gray-800 dark:text-white rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    >
      <p class="whitespace-nowrap">Carlos Mendoza</p>
    </div>
  </div>
  <div class="flex justify-center items-center">
    <Badge class="text-xs sm:text-sm md:text-base">Available to work</Badge>
  </div>
</h1>
<h2 class="text-xl lg:text-2xl text-pretty max-w-[700px]">
  <span class="text-[#1c0b2b]/80 dark:text-white/80"
    >Desarrollador de Software e Ingeniero de Sistemas</span
  >
  <span class="text-[#413b6b]/90 dark:text-violet-200/90"
    >con más de 1 año de experiencia diseñando e implementando soluciones web
    escalables.</span
  >
  <span class="text-[#5c65c0]/90 dark:text-red-200/90"
    >Ubicado en Bogotá, Colombia.</span
  >
  <span class="text-[#1c0b2b]/80 dark:text-white/80"
    >Especializado en la creación de sistemas eficientes y optimización de
    rendimiento para ofrecer productos digitales innovadores adaptados a las
    necesidades del cliente.</span
  >
</h2>

<nav class="flex gap-4 mt-8 flex-wrap">
  <SocialStack
    href="#"
    aria-label="LinkedIn Profile"
  >
  <!-- https://www.linkedin.com/in/mendev/ -->
    <LinkedInIcon class="size-7" />
  </SocialStack>
  <SocialStack href="#" aria-label="Github Profile">
    <!-- https://github.com/cmendev -->
    <GithubIcon class="size-7" />
  </SocialStack>
  <SocialStack href="#" aria-label="Email Mendev">
    <!-- mailto:cmendoza022002@gmail.com -->
    <GmailIcon class="size-7" />
  </SocialStack>
</nav>
<style>
  @keyframes color-change {
    0% {
      color: #4a52e5; /* Azul violeta vibrante */
    }
    16.67% {
      color: #00e000; /* Verde neón */
    }
    33.34% {
      color: #ff7300; /* Naranja intenso */
    }
    50.01% {
      color: #ff50d4; /* Rosado eléctrico */
    }
    66.68% {
      color: #c04040; /* Rojo terracota */
    }
    83.35% {
      color: #00b8ff; /* Azul celeste intenso */
    }
    100% {
      color: #4a52e5; /* Regresa al azul violeta */
    }
  }

  .color-animated {
    animation: color-change 4s infinite linear;
  }
</style>
