---
import { MENU } from "../data/menu";
---

<footer class="my-4 sm:mx-auto mx-3 sm:w-[400px] md:w-[600px] lg:w-[740px]">
  <div
    class="w-full max-w-screen-xl mx-auto p-4 md:py-2 text-[#1c0b2b]/90 dark:text-gray-200"
  >
    <div class="sm:flex sm:items-center sm:justify-between">
      <a
        href="#home"
        class="flex items-center mb-2 sm:mb-0 space-x-3 rtl:space-x-reverse"
      >
        <img
          class="rounded-full size-8"
          src="/me.png"
          class="h-8"
          alt="Mendev Logo"
        />
      </a>
      <ul
        class="flex flex-wrap items-center mb-6 text-sm font-medium text-white-500 sm:mb-0 sm:justify-evenly"
      >
        {
          MENU.map((menu) => (
            <li>
              <a href={menu.tag} class="hover:underline me-4 md:me-6">
                {menu.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <hr
      class="my-1 dark:border-gray-200 sm:mx-auto border-[#1c0b2b]/20 lg:my-3"
    />
    <span class="block text-sm sm:text-center"> ATS22 ❤️ </span>
  </div>
</footer>
