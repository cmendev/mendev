---
import SocialStack from "../components/SocialStack.astro";
import { PROJECTS } from "../data/projects";

import GithubIcon from "../components/icons/Github.astro";
import DemoIcon from "../components/icons/Demo.astro";
import ArrowPage from "./icons/ArrowPage.astro";
---

<style>
  .text-truncate {
    display: -webkit-box;
    -webkit-line-clamp: 6;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
<div class="grid gap-4 sm:grid-cols-1 md:grid-cols-2">
  {
    PROJECTS.map((project) => (
      <article class="border border-[#1c0b2b]/10 dark:border-white/10 p-4 rounded-lg shadow-lg">
        <a transition:name={project.title} href={`/projects/${project.title}`} class="flex items-center text-lg font-semibold text-orange-400 dark:text-yellow-200 mb-2">
          {project.title} <ArrowPage class="size-4" />
        </a>
        <img transition:name={`img-${project.title}`}
          class="rounded shadow-[#1c0b2b]/10 dark:shadow-white/10"
          src={project.image}
          alt={`Screenshot project ${project.title}`}
        />
        <p class="text-lg mb-4 text-pretty text-truncate text-[#1c0b2b]/90 dark:text-gray-200">
          {project.description}
        </p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {project.tags.map((tag) => (
            <li>
              <SocialStack>
                <tag.icon class="size-7" />
              </SocialStack>
            </li>
          ))}
        </ul>
        <div class="flex gap-x-2">
          <SocialStack href={project.github} aria-label={`Code ${project.title} on Github`}>
            <GithubIcon class="size-7" />
          </SocialStack>
          <SocialStack href={project.link} aria-label={`Demo ${project.title}`}>
            <DemoIcon class="size-7" />
          </SocialStack>
        </div>
      </article>
    ))
  }
</div>
